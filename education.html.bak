    <script>
      // Initialize page immediately
      document.addEventListener('DOMContentLoaded', () => {
        // Set theme preference
        const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');
        const currentTheme = localStorage.getItem('theme') || 
          (prefersDarkScheme.matches ? 'dark' : 'light');
        
        // Set initial theme
        if (currentTheme === 'light') {
          document.documentElement.setAttribute('data-theme', 'light');
        } else {
          document.documentElement.removeAttribute('data-theme');
        }
        
        // Wait for header to be fully created before setting up theme toggle
        setTimeout(() => {
          // Fix theme toggle functionality
          const themeToggle = document.querySelector('.theme-toggle');
          if (themeToggle) {
            // Remove any existing event listeners by cloning
            const newThemeToggle = themeToggle.cloneNode(true);
            themeToggle.parentNode.replaceChild(newThemeToggle, themeToggle);
            
            newThemeToggle.addEventListener('click', () => {
              let theme;
              
              // Toggle between light and dark themes
              if (document.documentElement.getAttribute('data-theme') === 'light') {
                document.documentElement.removeAttribute('data-theme');
                theme = 'dark';
              } else {
                document.documentElement.setAttribute('data-theme', 'light');
                theme = 'light';
              }
              
              // Save the preference
              localStorage.setItem('theme', theme);
            });
          }
        }, 100); // Short delay to ensure header is fully loaded
        
        // Activate the hero section immediately
        const heroSection = document.getElementById('education-hero');
        if (heroSection) {
          heroSection.classList.add('active');
        }
        
        // Initialize GSAP animations for sections
        if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
          initSectionAnimations();
        } else {
          // Fallback if GSAP isn't loaded
          const sections = document.querySelectorAll('.section');
          sections.forEach(section => {
            section.classList.add('active');
          });
        }
      });
      
      // Function to initialize section animations
      function initSectionAnimations() {
        // Track which sections have been animated to prevent re-animation
        const animatedSections = new Set();
        
        // Select all sections
        const sections = document.querySelectorAll('.section');
        
        // Initialize first section 
        if (sections.length > 0) {
          sections[0].classList.add('active');
          animatedSections.add(sections[0].id || 'first-section');
          animateSection(sections[0]);
        }
        
        // Setup scrolltrigger for each section
        sections.forEach((section, index) => {
          const sectionId = section.id || `section-${index}`;
          
          // Create scroll trigger for each section
          ScrollTrigger.create({
            trigger: section,
            start: "top 75%", // Start when the top of the section is 75% from the top of the viewport
            onEnter: () => {
              if (!animatedSections.has(sectionId)) {
                section.classList.add('active');
                animatedSections.add(sectionId);
                animateSection(section);
              }
            }
          });
        });
        
        // Animate elements within a section
        function animateSection(section) {
          // First set initial state of all animated elements
          gsap.set(section.querySelectorAll('.benefit-card, .step-item, .course-preview-card, h2, .section-description'), {
            opacity: 0,
            y: 20,
            scale: 1
          });
          
          // Animate benefit cards
          const benefitCards = section.querySelectorAll('.benefit-card');
          if (benefitCards.length) {
            gsap.to(benefitCards, {
              y: 0,
              opacity: 1,
              scale: 1,
              duration: 0.8,
              stagger: 0.12,
              ease: "power2.out"
            });
          }
          
          // Animate step items
          const stepItems = section.querySelectorAll('.step-item');
          if (stepItems.length) {
            gsap.to(stepItems, {
              y: 0,
              opacity: 1,
              scale: 1,
              duration: 0.8,
              stagger: 0.12,
              ease: "power2.out"
            });
          }
          
          // Animate course preview cards
          const courseCards = section.querySelectorAll('.course-preview-card');
          if (courseCards.length) {
            gsap.to(courseCards, {
              y: 0,
              opacity: 1,
              scale: 1,
              duration: 0.8,
              stagger: 0.12,
              ease: "power2.out"
            });
          }
          
          // Animation for section description
          const sectionDesc = section.querySelector('.section-description');
          if (sectionDesc) {
            gsap.to(sectionDesc, {
              y: 0,
              opacity: 1,
              duration: 0.8,
              delay: 0.2,
              ease: "power2.out"
            });
          }
          
          // Animation for section heading
          const sectionHeading = section.querySelector('h2');
          if (sectionHeading) {
            gsap.to(sectionHeading, {
              y: 0,
              opacity: 1,
              duration: 0.8,
              ease: "power2.out"
            });
          }
          
          // Animate CTA box
          const ctaBox = section.querySelector('.cta-box');
          if (ctaBox) {
            gsap.to(ctaBox, {
              y: 0,
              opacity: 1,
              scale: 1,
              duration: 0.8,
              ease: "power2.out"
            });
          }
          
          // Animate about education section
          const aboutEducation = section.querySelector('.education-about');
          if (aboutEducation) {
            gsap.to(aboutEducation, {
              y: 0,
              opacity: 1,
              scale: 1,
              duration: 0.8,
              ease: "power2.out"
            });
          }
        }
      }
    </script>
    
